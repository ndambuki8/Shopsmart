<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ScanlistActivity">


    <ListView
        android:id="@+id/scan_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_Mpesa"
        android:layout_width="67dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_button"
        android:clickable="true"
        android:src="@drawable/pay"
        app:backgroundTint="@color/funkyOrange"
        app:elevation="4dp" />

    <Button
        android:id="@+id/btnCloseApp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fab_Mpesa"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:background="@drawable/rounded_button"
        android:text="Done With Shopping" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp">

        <TextView
            android:id="@+id/tvTotalDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="148dp"
            android:text="Total: "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" />

    </RelativeLayout>




</RelativeLayout>